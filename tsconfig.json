{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    // "moduleResolution": "node10",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
